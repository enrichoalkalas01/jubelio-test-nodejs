{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "allowJs": true // Izinkan file JavaScript
    },
    "include": [
        "src/**/*",
        "src/eslint.config.mjs" // Tambahkan file konfigurasi ESLint di sini
    ],
    "exclude": ["node_modules"]
}
  